# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{cs,go,py,rs}]
indent_size = 4

# Tab indentation is required for Makefiles
[Makefile]
indent_style = tab

# Don't trim whitespace when unecessary
[*.{md,markdown}]
trim_trailing_whitespace = false
